# =============================================================================
# Open LLM Code Assistant - Environment Configuration Template
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# API Keys for LLM Providers
# =============================================================================
# Get these from the respective provider websites
GROQ_API_KEY="your_groq_api_key_here"
HF_API_KEY="your_huggingface_api_key_here"
TEXTGEN_API_KEY="your_textgen_api_key_here"

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
DATABASE_URL="postgresql://openllm_user:your_password@localhost:5432/openllm"

# Redis connection string
REDIS_URL="redis://localhost:6379"

# =============================================================================
# Security Settings
# =============================================================================
# Generate strong secrets for production
SECRET_KEY="your_super_secret_key_change_this_in_production"
JWT_SECRET="your_jwt_secret_key_change_this_in_production"

# SSL Certificate paths (for HTTPS)
SSL_CERT_FILE=""
SSL_KEY_FILE=""

# =============================================================================
# Application Settings
# =============================================================================
# Environment (development, testing, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Host and port
HOST=0.0.0.0
PORT=8000

# Debug mode (set to false in production)
DEBUG=true

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# Enable Grafana dashboard
GRAFANA_ENABLED=true

# =============================================================================
# Model Configuration
# =============================================================================
# Default model to use
DEFAULT_MODEL="codellama"

# Model cache directory
MODEL_CACHE_DIR="./models"

# =============================================================================
# Cache Settings
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# Maximum cache size
CACHE_MAX_SIZE=1000

# =============================================================================
# Rate Limiting
# =============================================================================
# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limiting window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# Enterprise Features (Optional)
# =============================================================================
# Enable enterprise features
ENTERPRISE_ENABLED=false

# SAML Identity Provider metadata URL
SAML_IDP_METADATA_URL=""

# Service Provider entity ID
SP_ENTITY_ID=""

# Service Provider key file path
SP_KEY_FILE=""

# Service Provider certificate file path
SP_CERT_FILE=""

# =============================================================================
# Development Settings
# =============================================================================
# Enable development features
DEV_MODE=true

# Enable auto-reload
AUTO_RELOAD=true

# =============================================================================
# Testing Settings
# =============================================================================
# Test database URL
TEST_DATABASE_URL="postgresql://openllm_user:your_password@localhost:5432/openllm_test"

# Test Redis URL
TEST_REDIS_URL="redis://localhost:6379/1"